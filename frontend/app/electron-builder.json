{
  "appId": "org.finanze.app",
  "productName": "Finanze",
  "asar": true,
  "files": ["dist-electron/**/*", "dist/**/*"],
  "directories": {
    "output": "release"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "finanze",
      "repo": "finanze",
      "releaseType": "release"
    }
  ],
  "extraResources": [
    {
      "from": "../../backend/dist",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.finance",
    "icon": "./dist/finanze.icns",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": "nsis",
    "icon": "./dist/finanze.png"
  },
  "linux": {
    "target": "AppImage",
    "category": "Finance",
    "icon": "./public/finanze.png"
  }
}
