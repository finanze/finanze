{
  "appId": "me.finanze",
  "productName": "Finanze",
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "asar": true,
  "files": ["dist-electron/**/*", "dist/**/*"],
  "directories": {
    "output": "release"
  },
  "protocols": {
    "name": "Finanze",
    "schemes": ["finanze"]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "finanze",
      "repo": "finanze",
      "releaseType": "release"
    }
  ],
  "extraResources": [
    {
      "from": "../../backend/dist",
      "to": "bin",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.finance",
    "icon": "./dist/finanze-macos.icns",
    "target": ["zip", "dmg"],
    "publish": [
      {
        "provider": "github",
        "owner": "finanze",
        "repo": "finanze",
        "releaseType": "release",
        "channel": "latest-${arch}"
      }
    ]
  },
  "win": {
    "target": "nsis",
    "icon": "./dist/finanze.png"
  },
  "linux": {
    "target": "AppImage",
    "category": "Finance",
    "icon": "./dist/finanze.png"
  }
}
